<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7f5ec"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:indicator_drawable_selected="@color/colorPrimaryDark"
                app:indicator_drawable_unselected="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="常用工具"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/search_saomiao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/saomao"
                                android:gravity="center"
                                android:text="扫描查询"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/search_saomiao"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_search_saomiao"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="visible" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tool_print"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/tool_print"
                                android:gravity="center"
                                android:text="打印文档"
                                android:layout_marginTop="10dp"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/tool_print"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_tool_print"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tool_updata"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/updata"
                                android:gravity="center"
                                android:text="上传附件"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/tool_updata"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_tool_updata"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tool_yuyin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/tool_yuyin"
                                android:gravity="center"
                                android:text="语音转换"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/tool_yuyin"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_tool_yuyin"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="位置服务"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/map_dingwei"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/dingwei_map"
                                android:gravity="center"
                                android:text="实时定位"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/map_dingwei"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_map_dingwei"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/map_guiji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/guiji_map"
                                android:gravity="center"
                                android:text="查询轨迹"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/map_guiji"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_map_guiji"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="visible" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/btn_jishiqi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/jishiqi"
                                android:gravity="center"
                                android:text="  计时器  "
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/btn_jishiqi"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_btn_jishiqi"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="10"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="visible" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">




                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="布局"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/btn_commontabactivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/common_tab"
                                android:gravity="center"
                                android:text="commonTab"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/btn_commontabactivity"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_btn_commontabactivity"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/btn_segmenttabactivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/set_tab"
                                android:gravity="center"
                                android:text="segmentTab"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/btn_segmenttabactivity"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_btn_segmenttabactivity"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="visible" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/btn_slidingtabactivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:clickable="true"
                                android:drawablePadding="5dp"
                                android:drawableTop="@mipmap/siiang_tab"
                                android:gravity="center"
                                android:text="slidingTab"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/btn_slidingtabactivity"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_btn_slidingtabactivity"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@mipmap/red_bg"
                                    android:gravity="center"
                                    android:text="10"
                                    android:textColor="#fff"
                                    android:textSize="10sp"
                                    android:visibility="visible" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">




                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>